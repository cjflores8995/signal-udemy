@{
    ViewBag.Title = "Home Page";
}

<div class="col-md-12" style="margin-bottom: 30px;">
    <h2>Di Hola</h2>
    <div id="messages"></div>
    <hr />

    <div class="form-group">
        <label>User Email:</label>
        <input type="email" class="form-control" id="toUser" value="" placeholder="Ingresa un usuario" />
    </div>
    <div class="form-group">
        <label>Message: </label>
        <input type="text" class="form-control" id="myMessage" value="" placeholder="Mensaje" />
    </div>
    <button id="submit" type="submit" class="btn btn-primary">Enviar mensaje</button>
</div>

@section scripts{
    <script>
        $('#submit').click(function (e) {
            e.preventDefault();

            let message = $('#myMessage').val();
            let sendToUser = $('#toUser').val();

            let Notification = { UserID: sendToUser, Message: message };

            $.ajax({
                type: 'POST',
                url: '/Logic/SendNotification',
                data: JSON.stringify(Notification),
                contentType: 'application/json; charset=utf-8',
                success: function (data) {
                    $('#myMessage').val('');
                },
                error: function (err) {
                    console.error(err.responseText);
                    alert('Algo salio mal!');
                }
            });
        });
    </script>
    }